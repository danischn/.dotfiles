#!/usr/bin/env bash

# Script to autopen downloaded pdfs
fswatch -o ~/Downloads | while read _
do
  file=$(ls -t ~/Downloads/ | head -1) 
  ext=${file##*.}
  if [ "$ext" == "pdf" ]; then
    mv ~/Downloads/"$file" ~/Documents/skole/4.sem/pdfs/ 2>/dev/null
    open ~/Documents/skole/4.sem/pdfs/"$file"
  fi
done
