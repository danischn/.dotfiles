# -- Changing Window Focus --
# change window focus within space
hyper - j : yabai -m window --focus south
hyper - k : yabai -m window --focus north
hyper - h : yabai -m window --focus west
hyper - l : yabai -m window --focus east

# move window and focus 
hyper - 1 : yabai -m window --space  1; yabai -m space --focus 1
hyper - 2 : yabai -m window --space  2; yabai -m space --focus 2
hyper - 3 : yabai -m window --space  3; yabai -m space --focus 3
hyper - 4 : yabai -m window --space  4; yabai -m space --focus 4
hyper - 5 : yabai -m window --space  5; yabai -m space --focus 5
hyper - 6 : yabai -m window --space  6; yabai -m space --focus 6
hyper - 7 : yabai -m window --space  7; yabai -m space --focus 7
hyper - 8 : yabai -m window --space  8; yabai -m space --focus 8
hyper - 9 : yabai -m window --space  9; yabai -m space --focus 9

#change focus between external displays (left and right)
hyper - w: yabai -m display --focus west
hyper - e: yabai -m display --focus east

#Move focus
ctrl - 1 : yabai -m space --focus 1
ctrl - 2 : yabai -m space --focus 2
ctrl - 3 : yabai -m space --focus 3
ctrl - 4 : yabai -m space --focus 4
ctrl - 5 : yabai -m space --focus 5
ctrl - 6 : yabai -m space --focus 6
ctrl - 7 : yabai -m space --focus 7
ctrl - 8 : yabai -m space --focus 8
ctrl - 9 : yabai -m space --focus 9

# -- Modifying the Layout --
# rotate layout clockwise
hyper - r : yabai -m space --rotate 270
hyper - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# -- Modifying Window Size --
# maximize a window
hyper - m : yabai -m window --toggle zoom-fullscreen

# move window to display left and right
# hyper - s : yabai -m window --display west; yabai -m display --focus west;
# hyper - g : yabai -m window --display east; yabai -m display --focus east;

#Destroy space and create space
hyper - q : yabai -m space --destroy
hyper - d : yabai -m space --create

# Resize
hyper - f : yabai -m window --resize right:20:0 ; yabai -m window --resize left:20:0;
hyper - a : yabai -m window --resize left:-20:0 ; yabai -m window --resize right:-20:0;
hyper - d : yabai -m window --resize bottom:0:20 ; yabai -m window --resize top:0:20;
hyper - s : yabai -m window --resize top:0:-20 ; yabai -m window --resize bottom:0:-20;
