#Info:
#Right command = alt 
#Hyper = Right option

#How to remember keys:
#Ctrl + number switches space to focus
#Right command switches focus, and hyper key modifies the layout.

# -- Changing Window Focus --
# change window focus within space
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east

# move window and focus 
alt - 1 : yabai -m window --space  1; yabai -m space --focus 1
alt - 2 : yabai -m window --space  2; yabai -m space --focus 2
alt - 3 : yabai -m window --space  3; yabai -m space --focus 3
alt - 4 : yabai -m window --space  4; yabai -m space --focus 4
alt - 5 : yabai -m window --space  5; yabai -m space --focus 5
alt - 6 : yabai -m window --space  6; yabai -m space --focus 6
alt - 7 : yabai -m window --space  7; yabai -m space --focus 7
alt - 8 : yabai -m window --space  8; yabai -m space --focus 8
alt - 9 : yabai -m window --space  9; yabai -m space --focus 9

#change focus between external displays (left and right)
alt - s: yabai -m display --focus west
alt - g: yabai -m display --focus east

#Move focus
ctrl - 1 : yabai -m space --focus 1
ctrl - 2 : yabai -m space --focus 2
ctrl - 3 : yabai -m space --focus 3
ctrl - 4 : yabai -m space --focus 4
ctrl - 5 : yabai -m space --focus 5
ctrl - 6 : yabai -m space --focus 6
ctrl - 7 : yabai -m space --focus 7
ctrl - 8 : yabai -m space --focus 8
ctrl - 9 : yabai -m space --focus 9

# -- Modifying the Layout --
# rotate layout clockwise
hyper - r : yabai -m space --rotate 270
# flip along y-axis
hyper - y : yabai -m space --mirror y-axis
# flip along x-axis
hyper - x : yabai -m space --mirror x-axis
# toggle window float
hyper - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# -- Modifying Window Size --
# maximize a window
hyper - m : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
hyper - e : yabai -m space --balance

# -- Moving Windows Around --
# swap windows
hyper - j : yabai -m window --swap south
hyper - k : yabai -m window --swap north
hyper - h : yabai -m window --swap west
hyper - l : yabai -m window --swap east

# move window to display left and right
hyper - s : yabai -m window --display west; yabai -m display --focus west;
hyper - g : yabai -m window --display east; yabai -m display --focus east;

# move window to space 
hyper - 1 : yabai -m window --space 1;
hyper - 2 : yabai -m window --space 2;
hyper - 3 : yabai -m window --space 3;
hyper - 4 : yabai -m window --space 4;
hyper - 5 : yabai -m window --space 5;
hyper - 6 : yabai -m window --space 6;
hyper - 7 : yabai -m window --space 7;

#Open Applications
ctrl - space : open -a arc
ctrl - return : open -a kitty
